---
export interface Props {
	src: string;
}

const { src } = Astro.props;
---

<div class="img-wrapper">
    <div></div>
    <img src={src} />
</div>

<style>
    .img-wrapper {
        margin: 2px;
        position: relative;
    }

    div div {
        display: block;
    }

    img {
        position: absolute;
        vertical-align: bottom;
        top: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>
