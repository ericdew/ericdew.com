  }

  ::-webkit-scrollbar {
    @apply w-4;
  }

  ::-webkit-scrollbar-track {
    @apply bg-slate-100 dark:bg-neutral-900;
  }

  ::-webkit-scrollbar-thumb {
    @apply rounded-full border-4 border-solid border-slate-100 bg-neutral-400 opacity-50 dark:border-neutral-900 dark:bg-neutral-600;
  }
</style>
