---
import GTMBody from '../components/analytics/GTMBody.astro';
import GTMHead from '../components/analytics/GTMHead.astro';

export interface Props {
  title: string;
  description: string;
  hidden?: boolean;
}

const { title, description, hidden = false } = Astro.props;
const share_image = "https://res.cloudinary.com/dwjfacaod/image/upload/v1673331417/public/share_vwcfsm.jpg";

const prod = import.meta.env.PROD;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="robots" content={`${hidden ? "noindex" : "all"}`}>

    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸŒ‰</text></svg>" />
    <link rel="preload" href="/fonts/subset-OpenSans-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/subset-OpenSans-Medium.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/subset-OpenSans-SemiBold.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/subset-OpenSans-Bold.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/subset-OpenSans-ExtraBold.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/subset-OpenSans-Italic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/subset-OpenSans-MediumItalic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />

    <title>{title}</title>

    <!-- Open Graph Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:site_name" content="Eric Dew" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:description" content={description} />

    <meta property="og:image" content={share_image} />
    <meta property="og:image:url" content={share_image} />
    <meta property="og:image:secure_url" content={share_image} />
    <meta property="og:type" content="image/jpeg" />
    <meta property="og:image:width" content="2160" />
    <meta property="og:image:height" content="1080" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@ericdew" />
    <meta name="twitter:creator" content="@ericdew" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={share_image} />
    <meta name="twitter:image:alt" content="Concert photography portfolio by Eric Dew" />
    
    {{prod} && <GTMHead />}
  </head>

  <body class="bg-slate-100 text-neutral-900 dark:bg-neutral-900 dark:text-slate-100">
    {{prod} && <GTMBody />}
    <slot />
  </body>
</html>

<style is:global>
